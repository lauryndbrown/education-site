<div align="center">
	<h3>Contact Us</h3>
	<%=simple_form_for @contact, :html=>{:class=>'form-horizontal'} do |form| %>
		<%= form.input :name, :required=> true %>
		<%= form.input :email, :required=> true %>
		<%= form.input :message, :as => :text, :required => true %>
		<div class="hidden">
			<%= form.input :nickname, :hint=>'Leave this field blank'%>
		</div>
		<div>
			<br />
			<%= form.button :submit, 'Send Message', :class=>"btn btn-primary" %>
		</div>
	<% end %>
</div>
